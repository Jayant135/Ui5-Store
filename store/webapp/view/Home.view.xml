<mvc:View
    controllerName="store.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <App id="app1">
        <Page
            title="{i18n>title}"
			enableScrolling="false"
			
        >
            <headerContent>
                <IconTabHeader
                    id="tabBar"
                    mode="Inline"
                    class="sapUiResponsiveContentPadding "
                    select="onSelect"
                >
                    <items>
                        <IconTabFilter
                            text="Dashboard"
                            key="dash"
                        >
                            <Text text="Info content goes here ..." />
                        </IconTabFilter>
                        <IconTabFilter
                            text="Inventory"
                            key="inventory"
                        >
                            <Text text="Attachments go here ..." />
                        </IconTabFilter>
                        <IconTabFilter
                            text="Billing"
                            key="so"
                        >
                            <Text text="Notes go here ..." />
                        </IconTabFilter>
                        <IconTabFilter
                            text="Purchasing"
                            key="po"
                        >
                            <Text text="People content goes here ..." />
                        </IconTabFilter>
                    </items>
                </IconTabHeader>
            </headerContent>
            <content >
                <NavContainer id="navContainer" />
            </content>
        </Page>
    </App>
</mvc:View>
